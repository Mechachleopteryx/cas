<assembly>
	<id></id>
	<formats>
		<format>dir</format>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<files>
		<file>
			<source>target/cas-${project.version}-jar-with-dependencies.jar</source>
			<destName>cas-${project.version}-jar-with-dependencies.jar</destName>
		</file>
		<file>
			<source>src/main/assembly/run.bat</source>
			<destName>run.bat</destName>

		<file>
			<source>src/main/assembly/run.sh</source>
			<destName>run.sh</destName>
		</file>
		<file>
			<source>${project.parent.basedir}/LICENSE</source>
			<destName>LICENSE</destName>
		</file>
		<file>
			<source>${project.parent.basedir}/README.md</source>
